  {{> header }}
  <div class="pure-g">
    <div class="pure-u-1">

      <div class="text-center">
        <h1 class="page-title">{{ title }}</h1>
      </div>
    </div>

    <div class="pure-g posts-list">
      {{#each collections.posts}}
      <div class="post-list-item pure-u-1">
        <p class="post-date">{{ formatDate this.date }}</p>
        <h3>
          <a class="post-link" href="/{{this.path}}">{{ this.title }}</a>
        </h3>
        <!-- {{ this.preview }} -->
        {{url}}
      </div>
      {{/each}}
    </div>

  </div>
  {{> footer }}
