{{> header }}
<div class="row">
  <div class="twelve columns">
    <div class="text-center">
      <h1>{{ title }}</h1>
    </div>

    <div class="row">
      {{#each collections.posts}}
      <div>
        <div>{{ formatDate this.date }}</div>
        <a href="/{{this.path}}">{{ this.title }}</a>
        <!-- {{ this.preview }} -->
        {{url}}
      </div>
      {{/each}}
    </div>

  </div>
</div>
{{> footer }}
